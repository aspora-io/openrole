# OpenRole Local Development Environment Variables

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/openrole_dev
POSTGRES_DB=openrole_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Redis
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=dev_secret_change_in_production_please
JWT_EXPIRES_IN=7d

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:3011
API_URL=http://localhost:3011

# Application
NODE_ENV=development
PORT=3000
API_PORT=3001

# Email (for development - use Mailhog or similar)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@openrole.local

# File uploads (local development)
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Feature flags
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_JOB_SCRAPING=false