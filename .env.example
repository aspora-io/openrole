# OpenRole Environment Configuration
# Copy this file to .env and fill in your actual values

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/openrole

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=7d

# Google OAuth - Get from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-from-console
GOOGLE_CLIENT_SECRET=your-google-client-secret-from-console

# LinkedIn OAuth (optional)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Server Configuration
PORT=3002
NODE_ENV=production

# API Security
API_KEYS=your-api-key-for-service-calls

# Email Configuration (for password resets, notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@openrole.net

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/var/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Redis Configuration (for production rate limiting and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-if-required

# Monitoring & Logging
SENTRY_DSN=your-sentry-dsn-for-error-tracking
LOG_LEVEL=info