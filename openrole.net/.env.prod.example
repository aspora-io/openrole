# OpenRole.net Production Environment Variables
# Copy this file to .env.prod and update with your values

# Database Configuration
DB_NAME=openrole_prod
DB_USER=openrole_user
DB_PASSWORD=your_secure_database_password_here
MYSQL_ROOT_PASSWORD=your_secure_root_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# WordPress Configuration
WP_ADMIN_EMAIL=admin@openrole.net
WP_ADMIN_USER=admin
WP_ADMIN_PASSWORD=your_secure_admin_password_here

# Domain Configuration
DOMAIN=openrole.net
WWW_DOMAIN=www.openrole.net

# SSL Configuration
SSL_EMAIL=ssl@openrole.net

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Email Configuration (for notifications)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=noreply@openrole.net
SMTP_PASSWORD=your_smtp_password_here

# Security Keys (Generate these at https://api.wordpress.org/secret-key/1.1/salt/)
# Add your WordPress salts here for production